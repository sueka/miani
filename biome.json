{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "space"
		}
	},
	"overrides": [
		{
			"include": ["./biome.json"],
			"json": {
				"formatter": {
					"indentStyle": "tab"
				}
			}
		}
	],
	"files": {
		"ignore": ["./dist/**/*", "./dev-dist/**/*"]
	}
}
